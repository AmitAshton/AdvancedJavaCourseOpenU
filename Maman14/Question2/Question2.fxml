<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="Question2.Question2Controller" spacing="10" alignment="CENTER">
    <Label text="Dictionary" style="-fx-font-size: 24px;" />
    <HBox spacing="10">
        <TextField fx:id="termField" promptText="Term" />
        <TextField fx:id="definitionField" promptText="Definition" />
        <Button text="Add/Update" onAction="#handleAddUpdate"/>
        <Button text="Delete" onAction="#handleDelete"/>
    </HBox>
    <TextField fx:id="searchField" promptText="Search Term" onKeyReleased="#handleSearch"/>
    <ListView fx:id="termList"/>
</VBox>
